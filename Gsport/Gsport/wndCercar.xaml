<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:Gsport" x:Class="Gsport.wndCercar"
        Title="wndCercar" Height="425.373" Width="697.015" Loaded="Window_Loaded">
    <Window.Resources>
        <local:efadbDataSet x:Key="efadbDataSet"/>
        <CollectionViewSource x:Key="equipsViewSource" Source="{Binding equips, Source={StaticResource efadbDataSet}}"/>
        <CollectionViewSource x:Key="jugadorsViewSource" Source="{Binding jugadors, Source={StaticResource efadbDataSet}}"/>
    </Window.Resources>
    <Window.Background>
        <ImageBrush ImageSource="Fotos/grass.jpg" Stretch="UniformToFill"/>
    </Window.Background>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <WrapPanel>
            <WrapPanel Orientation="Horizontal" Margin="5" Background="#FF52B64E">
                <RadioButton x:Name="rbEquip" Content="Equips" GroupName="grCerca" FontSize="16" Margin="0,0,10,0" IsChecked="True" Click="rbEquip_Click" Checked="rbEquip_Checked" FontWeight="Bold" Foreground="#FF0B2E10">
                    <RadioButton.Style>
                        <Style>
                            <Style.Triggers>
                                
                        </Style.Triggers>
                        </Style>
                    </RadioButton.Style>
                </RadioButton>
                <RadioButton x:Name="rbJugador" Content="Jugadors" GroupName="grCerca" FontSize="16" Click="rbJugador_Click" Checked="rbJugador_Checked" FontWeight="Bold" Foreground="#FF0B2E10"/>
                <RadioButton x:Name="rbEntrenador" Content="Entrenador" GroupName="grCerca" FontSize="16" Click="rbEntrenador_Click" Checked="rbEntrenador_Checked" FontWeight="Bold" Foreground="#FF0B2E10"/>
            </WrapPanel>
            <WrapPanel Orientation="Horizontal" Margin="5">
                <Label  FontSize="16" FontWeight="Bold" Foreground="#FF0B2E10" Content="Camps a buscar" Background="#FF52B64E"/>
                <ComboBox x:Name="lbCategoriaCerca" MinWidth="100" MinHeight="20"/>
            </WrapPanel>
        </WrapPanel>
        <WrapPanel Orientation="Horizontal" Grid.Column="1" Margin="10" DataContext="{StaticResource equipsViewSource}">
            <Label  FontSize="16" FontWeight="Bold" Foreground="#FF0B2E10" Content="Busca:" Background="#FF52B64E"/>
            <TextBox x:Name="tbBusca" MinWidth="210" FontSize="14" TextChanged="tbBusca_TextChanged" BorderBrush="{x:Null}"/>

        </WrapPanel>
        <DataGrid x:Name="dgResultat" Grid.Row="1" Grid.ColumnSpan="2" Margin="10"  AutoGenerateColumns="False" IsReadOnly="True" FontSize="14" MouseLeftButtonDown="dgResultat_MouseLeftButtonDown"/>
        
    </Grid>
</Window>
