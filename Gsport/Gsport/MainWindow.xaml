                <Border Margin="10,0,10,30" x:Name="wpDadesEntrenador" BorderThickness="2">
                    <WrapPanel Height="160"  Background="#FF52B64E" DataContext="{StaticResource entrenadorsequipsViewSource1}" x:Name="wpPrincipalEntenador">
