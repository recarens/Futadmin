                            <DataGrid.Columns>
                                <DataGridTextColumn x:Name="nomColumn1" Binding="{Binding nom}" Header="nom" Width="150"/>
                                <DataGridTextColumn x:Name="puntuacioColumn" Binding="{Binding puntuacio}" Header="puntuacio" Width="100"/>
                            </DataGrid.Columns>
                        </DataGrid>

                    </WrapPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>
        <ScrollViewer Grid.Column="4">
            <StackPanel x:Name="spDadesTemporada" Orientation="Vertical">
                <Button x:Name="btnGuardarTemporada" Click="btnGuardarTemporada_Click" FontSize="16" FontWeight="Bold" Margin="10,0,10,0" Background="#FF52B64E" BorderBrush="{x:Null}" BorderThickness="1" Foreground="#FF0B2E10" IsEnabled="False">Guardar</Button>
                <Button x:Name="btnDadesNovaTemporada" Content="Nova Temporada" FontSize="16" FontWeight="Bold" Margin="10,50,10,0" Click="btnDadesNovaTemporada_Click" Background="#FF52B64E" BorderBrush="{x:Null}" BorderThickness="1" Foreground="#FF0B2E10"/>
